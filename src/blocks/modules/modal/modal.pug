include ../logo/logo
include navigation/navigation
include contact/contact
include thanks/thanks
include request/request
include payment/payment
mixin modal()
    section.modal.modal_active.swiper-container
        .swiper-wrapper
            .swiper-slide
                .modal__wrapper
                    .modal__inner
                        +logo('modal')
                        +logo('modal')
                    .modal__inner
                        .modal__content
                            +navigation
                            +thanks
                            +request(false)
                            +payment
                            +contact
        .swiper-scrollbar
