extends layouts/default

block variables
	- const title = "And Ruban"
	-
		let sec = 1;
block content
	header.section.section_dark.section_column.swiper-slide(class=`section_header`)
		.section__bg-wrapper
			.section__bg-inner
				picture.section__bg.section__bg_grayscale.section__bg_right.dark-mask
					source(srcset="./img/header.webp")
					img(src="./img/header.jpg" alt="")
				.section__bg-garant
					img(src="./img/sprites/sprite.svg#garant", class="section__bg-icon icon-garant" alt="")
		.section__wrapper
			+nav()
			.section__row
				p.p.p_font_light.section__description Мы воплощаем любой смелый дизайн. Производим мебель любых стилей. Работаем по Москве и Московской области. Более 40 проектов на houzz.ru.
				h2.h2.section__title Создаем мебель иных реальностей
				button.btn.btn_large.btn_primary.h6.section__btn рассчитать стоимость
	section.section.section_light.swiper-slide(class=`section_create`)
		.section__wrapper
			.section__row
				.section__col.section__col_left
					.card.card_left.card_top_50
						.card__inner(style="background-image:url(./img/card-img-2.jpg")
							.card__title andruban — мебель  иных реальностей
						.card__wrapper.card__mini-slider.mini-slider.swiper-container
							ul.mini-slider__body.swiper-wrapper
								each index in Array(5)
									li.swiper-slide
										h4.h4.mini-slider__title Кухня «Современная классика»
										h5.h5.mini-slider__subtitle от 60 000 ₽
										p.p.p_font_light.mini-slider__description Угловая кухня среднего размера в стиле современная классика с обеденным столом, накладной раковиной, фасадами с утопленной филенкой, столешницей из ламината, фартуком из дерева.
							.mini-slider__control
								button.mini-slider__arrow_prev
									+icon('arrow-left', 'arrow-h')
								.mini-slider__pagination
								button.mini-slider__arrow_next
									+icon('arrow-right', 'arrow-h')
							button.btn.btn_large.btn_primary.btn_wide.h6 Хочу кухню
				.section__col.section__col_right.section__col_flex
					.title.title_card.section__title
						h2.h2 Мы создаем мебель
						h4.h4 Любых стилей
					.top-slider.top-slider_left
						.top-slider__header
							p.p.p_font_light.top-slider__description AndRuban — мастерская по изготовлению современной, удобной и практичной мебели, выполненной из лучших материалов. Мы способны воплотить в жизнь самый смелый дизайн. Работаем в стиле фьюжн и производим мебель иных реальностей.
							ul.tabs
								each index, val in ['Кухни', 'Прихожие', 'Гостинные', 'Детские', 'Гостинные', 'Детские']
									if val === 0
										li.tabs__item.tabs__item_active= index
									else
										li.tabs__item= index
								span.tabs__underline
						.top-slider__footer
							button.top-slider__btn.btn.btn_rect.btn_transparent_primary.btn_uppercase
								+icon('eye', 'btn__icon')
								span.btn__title смотреть оригинал фото
							.swiper-container.top-slider__slider
								.top-slider__control
									button.top-slider__arrow_prev
										+icon('arrow-left', 'arrow-h')
									.top-slider__pagination
									button.top-slider__arrow_next
										+icon('arrow-right', 'arrow-h')
								ul.swiper-wrapper
									each index, val in Array(5)
										li.swiper-slide.light-mask
											picture
												source(srcset=`./img/create-thumb-${val + 1}.webp`)
												img(src=`./img/create-thumb-${val + 1}.jpg` alt="")
										li.swiper-slide.light-mask
											picture
												source(srcset=`./img/create-thumb-${val + 1}.webp`)
												img(src=`./img/create-thumb-${val + 1}.jpg` alt="")
									span.swiper-border
		.section__bg-wrapper.section__bg-wrapper_bottom.swiper-container.slider-background
				.section__bg-inner.swiper-wrapper
					each index, val in Array(5)
						.swiper-slide
							picture.section__bg.section__bg_grayscale.section__bg_right.section__bg_top.light-mask
								source(srcset=`./img/create-slider-${val + 1}.webp`)
								img(src=`./img/create-slider-${val + 1}.jpg` alt="")
						.swiper-slide
							picture.section__bg.section__bg_grayscale.section__bg_right.section__bg_top.light-mask
								source(srcset=`./img/create-slider-${val + 1}.webp`)
								img(src=`./img/create-slider-${val + 1}.jpg` alt="")
	section.section.section_dark.swiper-slide(class=`section_producers`)
		.section__wrapper
			.section__row
				h2.h2.section__title Наши поставщики
				.section__description
					h6.h6 Мы сотрудничаем с лучшими мировыми поставщиками
					p.p.p_font_light Наполняем нашу мебель самой лучшей фурнитурой для самых взыскательных заказчиков и удобного использования  каждым членом семьи.

block scripts
	script(src="js/main.js")
	script(src="js/vendor.js")
